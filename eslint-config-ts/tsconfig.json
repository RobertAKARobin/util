{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"emitDeclarationOnly": true,
		"experimentalDecorators": true,
		"lib": ["ESNext", "DOM"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": false,
		"noEmitOnError": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext"
	}
}
