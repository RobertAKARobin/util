{
	"compilerOptions": {
		"baseUrl": ".",
		"noEmit": true,
		"noEmitOnError": true,
		"paths": {
			"@src/*": ["tmp/*", "src/*"]
		}
	},
	"extends": [
		"@robertakarobin/eslint-config-ts"
	],
	"include": [
		"node_modules/@robertakarobin/web/**/*.ts",
		"build.ts",
		"spec/**/*.ts",
		"src/**/*.ts",
		"tmp/**/*.ts"
	]
}
